// ────────────── Environment Variables ──────────────
// https://github.com/YaLTeR/niri/wiki/Configuration:-Miscellaneous#environment

environment {
    DISPLAY ":1"
    ELECTRON_OZONE_PLATFORM_HINT "auto"
    QT_QPA_PLATFORM "wayland"
    QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
    XDG_SESSION_TYPE "wayland"
    XDG_CURRENT_DESKTOP "niri"
}


// ────────────── Layer Rules ──────────────
// https://yalter.github.io/niri/Configuration%3A-Layer-Rules.html

layer-rule {
    match namespace="^swww-daemon$"

    place-within-backdrop true
}

// ────────────── Miscellaneous ──────────────
// https://yalter.github.io/niri/Configuration%3A-Miscellaneous.html

overview {
    zoom 0.5

    workspace-shadow {
        off
        // softness 40
        // spread 10
        // offset x=0 y=10
        // color "#00000050"
    }
}

clipboard {
    disable-primary
}

hotkey-overlay {
    skip-at-startup
}
